.main_chat
  .main_header
    .main_header_group
      %p= @group.name
      %ul
        Member :
        - @group.users.each do |user|
          %li= user.name
    = link_to "Edit", edit_group_path(@group), class: "main_header_edit"

  .messages
    = render @messages

  .message
    = form_for [@group, @message] do |f|
      .input_box
        = f.text_field :content, class: "input_box_text", placeholder: "type a message"
        .input_box_icon
          = f.label :image, class: "input_box_icon_image" do
            = icon('fas', 'image')
            = f.file_field :image, class: "input_box_icon_file"
      = f.submit 'Send', class: 'new_message_submit'